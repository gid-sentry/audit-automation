{
    "manifest_version": 3,
    "name": "Sentry Audit Automator 3000",
    "description": "Saves you time in knowing how your accounts are doing.",
    "version": "0.01",
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "js": [
          "node_modules/xlsx/xlsx.js",
          "popup.js"
          ]
        }],
    "host_permissions": [
      "https://*.sentry.io/*"
    ],
    "permissions": [
      "tabGroups",
      "cookies",
      "storage",
      "tabs"
    ]
  }